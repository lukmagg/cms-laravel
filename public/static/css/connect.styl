body
    background-color #000000
    font-size 14px
    margin 0px
    
 .mtop16
    margin-top 16px   
.box
    background-color #f6f6f6 
    border-radius 8px
    border 1px solid #d6d6d6
    position absolute
    width 500px
    .btn-dark
        width 100%
        border 0px
    .form-control
        &:focus
        &:active
            outline none
            box-shadow none
    .inside
        padding 16px
        background-color #f6f6f6
    .header
        background-color white
        border-radius 8px 8px 0px 0px
        a
            img
                display block
                margin 0px auto
                width 20%
    .footer
        text-align center
        a
            display inline-block
            font-size 0.9em
            &:last-child
                margin-left 24px


.box_login
    left calc(50% - 250px)
    top calc(50% - 196px)
    background-color white

.box_register
    left calc(50% - 250px)
    top calc(50% - 310px)
    background-color white