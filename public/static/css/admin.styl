body
    background-color #f5f6fa
    font-size 14px
    font-family 'Roboto', sans-serif

h2,h3,h4,h5,ul,body,html
    padding 0px
    margin 0px
.mtop16
    margin-top 16px
.wrapper
    min-height 100vh
    overflow hidden
    .col1
        float left
        position relative
        z-index 999
        width 17%
    .col2
        float left
        width 83%

.sidebar
    background-color #000000 
    min-height 100vh
    .section-top
        box-shadow 0 0.5rem 1rem rgba(0,0,0,0.15)
    .logo
        display block
        margin 0px auto
        padding-top 24px
        width 38%
    .user
        padding 16px
        color #fff 
        a
            font-size 1.2em
    .main 
        margin-top 8px
        ul
            li
                margin-bottom 4px
                a 
                    color #fff !important
                    display block
                    font-size 1.1em
                    padding 12px 16px
                    i
                        margin-right 10px
                    &:hover
                        background-color #fff
                        box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
                        color #000000 !important
                        text-decoration none
            
.navbar
    background-color #000000 !important
    a
        font-size 1.1em
        color #fff !important
        text-decoration none
        &:hover
            background-color #fff                
            color #000000 !important
        i
            margin-right 4px

.page
    padding-top 16px
    padding-bottom 16px
    .breadcrumb
        background-color #fff
        box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.10) !important
        .breadcrumb-item
            a 
                &:hover 
                    text-decoration none 
                i
                    margin-right 4px

    .panel
        background-color #fff
        border-radius 6px
        border-bottom 2px solid #000000
        width 100%
        .header 
            border-bottom 1px solid #e8e8e8
            h2.title
                display inline-block
                color #19213d
                font-size 1.1em
                padding 12px 16px
        .inside
            padding 16px
            .nav
                .nav-link
                    border 1px solid #2caaff
                    margin-right 8px   
                    &:hover
                        background-color #2caaff
                        color #fff
.opts
    a 
        border-radius 4px
        border 1px solid #dedede
        display inline-block
        padding 8px 12px


.product_gallery
    overflow hidden
    .btn-submit
        
        display block
        margin-right 1%
        width 100%
        a
            border 1px dashed #666
            border-radius 4px
            color #333
            display block
            font-size 1.5em
            text-align center
            padding 12px
            width 100%
            &:hover 
                background-color #2caaff
                color #fff

    .tumbs
        overflow hidden
        .tumb
            float left
            margin-top 16px
            position relative
            width 48%
            a
                background-color rgba(0,0,0, .5)
                border-radius 50%
                display inline-block
                color #fff
                padding  6px 10px
                position absolute
                bottom 8px
                right 8px
            img
                border-radius 4px
                width 100%
            &:nth-child(odd)
                margin-right 4%