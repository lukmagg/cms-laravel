body
    background-color #f5f6fa
    font-size 14px
    font-family 'Roboto', sans-serif

h2,h3,h4,h5,ul,body,html
    padding 0px
    margin 0px

.wrapper
    min-height 100vh
    overflow hidden
    .col1
        float left
        position relative
        z-index 999
        width 17%
    .col2
        float left
        width 83%

.sidebar
    background-color #fff 
    min-height 100vh
    .section-top
        box-shadow 0 0.5rem 1rem rgba(0,0,0,0.15)
    .logo
        display block
        margin 0px auto
        padding-top 24px
        width 38%
    .user
        padding 16px
        a
            font-size 1.2em
    .main 
        margin-top 8px
        ul
            li
                margin-bottom 4px
                a 
                    color #8998AC !important
                    display block
                    font-size 1.1em
                    padding 12px 16px
                    i
                        margin-right 10px
                    &:hover
                        background-color #000000
                        box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
                        color #fff !important
                        text-decoration none
                        
                   
